{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts", "dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
